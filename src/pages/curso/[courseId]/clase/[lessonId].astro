---
import BaseLayout from '@/layouts/BaseLayout.astro';

export const prerender = false;
const { courseId } = Astro.params;
---
<BaseLayout title="Curso - AprendePlus" showFooter={false}>
  <div id="clase-redirect-root" class="min-h-screen flex items-center justify-center bg-[#F8F7F4]" data-course-id={courseId ?? ''}>
    <p class="text-gray-500">Redirecting to course...</p>
  </div>
  <script>
    const r = document.getElementById('clase-redirect-root');
    const cid = r?.getAttribute('data-course-id') ?? '';
    if (cid) window.location.replace(`/curso/${cid}/item`);
  </script>
</BaseLayout>
