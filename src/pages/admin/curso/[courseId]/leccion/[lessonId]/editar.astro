---
import Layout from '@/layouts/Layout.astro';

export const prerender = false;
const { courseId, lessonId } = Astro.params;
---
<Layout title="Edit lesson - AprendePlus" currentPath="/admin">
  <div id="admin-leccion-editar-root" class="min-h-screen bg-white py-12" data-course-id={courseId ?? ''} data-lesson-id={lessonId ?? ''}>
    <div class="max-w-2xl mx-auto px-6">
      <div class="mb-8">
        <a id="back-link" href="#" class="inline-flex items-center gap-2 text-[#2F7FBF] hover:underline mb-4 cursor-pointer">
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"/></svg>
          Back to course
        </a>
        <h1 id="page-title" class="text-2xl font-bold text-[#2B2B2B] mb-1">Edit lesson</h1>
      </div>

      <div id="form-error" class="hidden mb-4 p-3 bg-red-50 text-red-700 rounded-lg"></div>
      <div id="form-loading" class="text-gray-500">Loading...</div>

      <form id="lesson-form" class="hidden space-y-6 bg-white border border-gray-200 rounded-xl p-6">
        <div>
          <label for="title" class="block text-sm font-medium text-[#2B2B2B] mb-2">Title *</label>
          <input type="text" id="title" name="title" required class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-[#2F7FBF]" />
        </div>
        <div>
          <label for="content" class="block text-sm font-medium text-[#2B2B2B] mb-2">Content</label>
          <textarea id="content" name="content" rows="8" class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-[#2F7FBF]"></textarea>
        </div>
        <div>
          <label for="video-url" class="block text-sm font-medium text-[#2B2B2B] mb-2">Video URL (optional)</label>
          <input type="url" id="video-url" name="video-url" placeholder="https://example.com/video.mp4" class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-[#2F7FBF]" />
          <p class="mt-1 text-xs text-gray-500">Leave empty to use the default video URL</p>
        </div>
        <div class="flex justify-between">
          <button type="button" id="btn-delete" class="px-4 py-2 text-red-500 border border-red-300 rounded-lg hover:bg-red-50 cursor-pointer">Delete lesson</button>
          <div class="flex gap-3">
            <a id="cancel-link" href="#" class="px-6 py-3 border border-gray-300 rounded-lg text-gray-700 hover:bg-gray-50 cursor-pointer">Cancel</a>
            <button type="submit" id="save-btn" class="px-6 py-3 bg-gray-400 text-white rounded-lg cursor-not-allowed transition-colors font-medium" disabled>Save</button>
          </div>
        </div>
      </form>
    </div>
  </div>
</Layout>

<script>
  import { get, patch, del } from '@/lib/api';
  import type { AdminLesson } from '@/lib/api-types';

  const root = document.getElementById('admin-leccion-editar-root');
  const courseId = root?.getAttribute('data-course-id') ?? '';
  const lessonId = root?.getAttribute('data-lesson-id') ?? '';

  const backLink = document.getElementById('back-link');
  const cancelLink = document.getElementById('cancel-link');
  const pageTitle = document.getElementById('page-title');
  const formLoading = document.getElementById('form-loading');
  const form = document.getElementById('lesson-form') as HTMLFormElement;
  const errorEl = document.getElementById('form-error');
  const btnDelete = document.getElementById('btn-delete');
  const saveBtn = document.getElementById('save-btn') as HTMLButtonElement | null;

  let originalTitle = '';
  let originalContent = '';
  let originalVideoUrl = '';

  function checkForChanges() {
    if (!saveBtn) return;
    const titleInput = form?.querySelector('#title') as HTMLInputElement | undefined;
    const contentInput = form?.querySelector('#content') as HTMLTextAreaElement | undefined;
    const videoUrlInput = form?.querySelector('#video-url') as HTMLInputElement | undefined;
    const currentTitle = titleInput?.value?.trim() ?? '';
    const currentContent = contentInput?.value?.trim() ?? '';
    const currentVideoUrl = videoUrlInput?.value?.trim() ?? '';
    const hasChanges = currentTitle !== originalTitle || currentContent !== originalContent || currentVideoUrl !== originalVideoUrl;
    if (hasChanges) {
      saveBtn.disabled = false;
      saveBtn.classList.remove('bg-gray-400', 'cursor-not-allowed');
      saveBtn.classList.add('bg-[#2F7FBF]', 'hover:bg-[#256A9E]', 'cursor-pointer');
    } else {
      saveBtn.disabled = true;
      saveBtn.classList.remove('bg-[#2F7FBF]', 'hover:bg-[#256A9E]', 'cursor-pointer');
      saveBtn.classList.add('bg-gray-400', 'cursor-not-allowed');
    }
  }

  if (backLink) backLink.setAttribute('href', `/admin/curso/${courseId}/editar`);
  if (cancelLink) cancelLink.setAttribute('href', `/admin/curso/${courseId}/editar`);

  async function load() {
    try {
      const lesson = await get<AdminLesson>(`/admin/courses/${courseId}/lessons/${lessonId}`);
      originalTitle = lesson.title?.trim() ?? '';
      originalContent = lesson.content?.trim() ?? '';
      originalVideoUrl = lesson.video_url?.trim() ?? '';
      if (pageTitle) pageTitle.textContent = `Edit: ${lesson.title}`;
      (form.querySelector('#title') as HTMLInputElement).value = lesson.title ?? '';
      (form.querySelector('#content') as HTMLTextAreaElement).value = lesson.content ?? '';
      (form.querySelector('#video-url') as HTMLInputElement).value = lesson.video_url ?? '';
      if (formLoading) formLoading.classList.add('hidden');
      if (form) form.classList.remove('hidden');
      checkForChanges();
      const titleInput = form.querySelector('#title') as HTMLInputElement;
      const contentInput = form.querySelector('#content') as HTMLTextAreaElement;
      const videoUrlInput = form.querySelector('#video-url') as HTMLInputElement;
      titleInput?.addEventListener('input', checkForChanges);
      titleInput?.addEventListener('paste', () => setTimeout(checkForChanges, 0));
      contentInput?.addEventListener('input', checkForChanges);
      contentInput?.addEventListener('paste', () => setTimeout(checkForChanges, 0));
      videoUrlInput?.addEventListener('input', checkForChanges);
      videoUrlInput?.addEventListener('paste', () => setTimeout(checkForChanges, 0));
    } catch (e: unknown) {
      const err = e as { status?: number; body?: { error?: string } };
      if (formLoading) formLoading.textContent = 'Error loading.';
      if (errorEl) {
        errorEl.textContent = err?.body?.error || 'Error loading lesson';
        errorEl.classList.remove('hidden');
      }
    }
  }

  form?.addEventListener('submit', async (e) => {
    e.preventDefault();
    if (errorEl) errorEl.classList.add('hidden');
    const title = (form.querySelector('#title') as HTMLInputElement)?.value?.trim();
    const content = (form.querySelector('#content') as HTMLTextAreaElement)?.value?.trim() ?? '';
    const videoUrl = (form.querySelector('#video-url') as HTMLInputElement)?.value?.trim() || undefined;
    if (!title) return;
    try {
      const lessonPayload: { title: string; content: string; video_url?: string } = { title, content };
      if (videoUrl) lessonPayload.video_url = videoUrl;
      await patch(`/admin/courses/${courseId}/lessons/${lessonId}`, { lesson: lessonPayload });
      window.location.href = `/admin/curso/${courseId}/editar`;
    } catch (err: unknown) {
      const apiErr = err as { body?: { error?: string; errors?: string[] } };
      if (errorEl) {
        errorEl.textContent = apiErr?.body?.error || (Array.isArray(apiErr?.body?.errors) && apiErr.body.errors[0]) || 'Error saving';
        errorEl.classList.remove('hidden');
      }
    }
  });

  btnDelete?.addEventListener('click', async () => {
    if (!confirm('Delete this lesson? It will be removed from the course.')) return;
    try {
      await del(`/admin/courses/${courseId}/lessons/${lessonId}`);
      window.location.href = `/admin/curso/${courseId}/editar`;
    } catch (err: unknown) {
      const apiErr = err as { body?: { error?: string } };
      if (errorEl) {
        errorEl.textContent = apiErr?.body?.error || 'Error deleting';
        errorEl.classList.remove('hidden');
      }
    }
  });

  if (courseId && lessonId) load();
</script>
