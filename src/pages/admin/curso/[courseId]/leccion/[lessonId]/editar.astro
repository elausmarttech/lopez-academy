---
import Layout from '@/layouts/Layout.astro';

export const prerender = false;
const { courseId, lessonId } = Astro.params;
---
<Layout title="Edit lesson - AprendePlus" currentPath="/admin">
  <div id="admin-leccion-editar-root" class="min-h-screen bg-white py-12" data-course-id={courseId ?? ''} data-lesson-id={lessonId ?? ''}>
    <div class="max-w-2xl mx-auto px-6">
      <div class="mb-8">
        <a id="back-link" href="#" class="inline-flex items-center gap-2 text-[#2F7FBF] hover:underline mb-4">
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"/></svg>
          Back to lessons
        </a>
        <h1 id="page-title" class="text-2xl font-bold text-[#2B2B2B] mb-1">Edit lesson</h1>
      </div>

      <div id="form-error" class="hidden mb-4 p-3 bg-red-50 text-red-700 rounded-lg"></div>
      <div id="form-loading" class="text-gray-500">Loading...</div>

      <form id="lesson-form" class="hidden space-y-6 bg-white border border-gray-200 rounded-xl p-6">
        <div>
          <label for="title" class="block text-sm font-medium text-[#2B2B2B] mb-2">Title *</label>
          <input type="text" id="title" name="title" required class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-[#2F7FBF]" />
        </div>
        <div>
          <label for="content" class="block text-sm font-medium text-[#2B2B2B] mb-2">Content</label>
          <textarea id="content" name="content" rows="8" class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-[#2F7FBF]"></textarea>
        </div>
        <div class="flex justify-between">
          <button type="button" id="btn-delete" class="px-4 py-2 text-red-500 border border-red-300 rounded-lg hover:bg-red-50">Delete lesson</button>
          <div class="flex gap-3">
            <a id="cancel-link" href="#" class="px-6 py-3 border border-gray-300 rounded-lg text-gray-700 hover:bg-gray-50">Cancel</a>
            <button type="submit" class="px-6 py-3 bg-[#2F7FBF] text-white rounded-lg hover:bg-[#256A9E] font-medium">Save</button>
          </div>
        </div>
      </form>
    </div>
  </div>
</Layout>

<script>
  import { get, patch, del } from '@/lib/api';
  import type { AdminLesson } from '@/lib/api-types';

  const root = document.getElementById('admin-leccion-editar-root');
  const courseId = root?.getAttribute('data-course-id') ?? '';
  const lessonId = root?.getAttribute('data-lesson-id') ?? '';

  const backLink = document.getElementById('back-link');
  const cancelLink = document.getElementById('cancel-link');
  const pageTitle = document.getElementById('page-title');
  const formLoading = document.getElementById('form-loading');
  const form = document.getElementById('lesson-form') as HTMLFormElement;
  const errorEl = document.getElementById('form-error');
  const btnDelete = document.getElementById('btn-delete');

  if (backLink) backLink.setAttribute('href', `/admin/curso/${courseId}/lecciones`);
  if (cancelLink) cancelLink.setAttribute('href', `/admin/curso/${courseId}/lecciones`);

  async function load() {
    try {
      const lesson = await get<AdminLesson>(`/admin/courses/${courseId}/lessons/${lessonId}`);
      if (pageTitle) pageTitle.textContent = `Edit: ${lesson.title}`;
      (form.querySelector('#title') as HTMLInputElement).value = lesson.title ?? '';
      (form.querySelector('#content') as HTMLTextAreaElement).value = lesson.content ?? '';
      if (formLoading) formLoading.classList.add('hidden');
      if (form) form.classList.remove('hidden');
    } catch (e: unknown) {
      const err = e as { status?: number; body?: { error?: string } };
      if (formLoading) formLoading.textContent = 'Error loading.';
      if (errorEl) {
        errorEl.textContent = err?.body?.error || 'Error loading lesson';
        errorEl.classList.remove('hidden');
      }
    }
  }

  form?.addEventListener('submit', async (e) => {
    e.preventDefault();
    if (errorEl) errorEl.classList.add('hidden');
    const title = (form.querySelector('#title') as HTMLInputElement)?.value?.trim();
    const content = (form.querySelector('#content') as HTMLTextAreaElement)?.value?.trim() ?? '';
    if (!title) return;
    try {
      await patch(`/admin/courses/${courseId}/lessons/${lessonId}`, { lesson: { title, content } });
      window.location.href = `/admin/curso/${courseId}/lecciones`;
    } catch (err: unknown) {
      const apiErr = err as { body?: { error?: string; errors?: string[] } };
      if (errorEl) {
        errorEl.textContent = apiErr?.body?.error || (Array.isArray(apiErr?.body?.errors) && apiErr.body.errors[0]) || 'Error saving';
        errorEl.classList.remove('hidden');
      }
    }
  });

  btnDelete?.addEventListener('click', async () => {
    if (!confirm('Delete this lesson? It will be removed from the course.')) return;
    try {
      await del(`/admin/courses/${courseId}/lessons/${lessonId}`);
      window.location.href = `/admin/curso/${courseId}/lecciones`;
    } catch (err: unknown) {
      const apiErr = err as { body?: { error?: string } };
      if (errorEl) {
        errorEl.textContent = apiErr?.body?.error || 'Error deleting';
        errorEl.classList.remove('hidden');
      }
    }
  });

  if (courseId && lessonId) load();
</script>
