---
import Layout from '@/layouts/Layout.astro';

export const prerender = false;
const { courseId } = Astro.params;
---
<Layout title="New lesson - AprendePlus" currentPath="/admin">
  <div id="admin-leccion-nueva-root" class="min-h-screen bg-white py-12" data-course-id={courseId ?? ''}>
    <div class="max-w-xl mx-auto px-6">
      <div class="mb-8">
        <a id="back-link" href="#" class="inline-flex items-center gap-2 text-[#2F7FBF] hover:underline mb-4">
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"/></svg>
          Back to course
        </a>
        <h1 class="text-2xl font-bold text-[#2B2B2B] mb-1">New lesson</h1>
        <p class="text-gray-600 text-sm">Course: <span id="course-title">...</span></p>
      </div>

      <div id="form-error" class="hidden mb-4 p-3 bg-red-50 text-red-700 rounded-lg"></div>

      <form id="lesson-form" class="space-y-6 bg-white border border-gray-200 rounded-xl p-6">
        <div>
          <label for="title" class="block text-sm font-medium text-[#2B2B2B] mb-2">Lesson title *</label>
          <input type="text" id="title" name="title" required placeholder="e.g. Introduction to the topic" class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-[#2F7FBF]" />
        </div>
        <div>
          <label for="content" class="block text-sm font-medium text-[#2B2B2B] mb-2">Content</label>
          <textarea id="content" name="content" rows="6" placeholder="Lesson content..." class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-[#2F7FBF]"></textarea>
        </div>
        <div>
          <label for="video-url" class="block text-sm font-medium text-[#2B2B2B] mb-2">Video URL (optional)</label>
          <input type="url" id="video-url" name="video-url" placeholder="https://example.com/video.mp4" class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-[#2F7FBF]" />
          <p class="mt-1 text-xs text-gray-500">Leave empty to use the default video URL</p>
        </div>
        <div class="flex justify-end gap-3">
          <a id="cancel-link" href="#" class="px-6 py-3 border border-gray-300 rounded-lg text-gray-700 hover:bg-gray-50">Cancel</a>
          <button type="submit" class="px-6 py-3 bg-[#2F7FBF] text-white rounded-lg hover:bg-[#256A9E] font-medium cursor-pointer">Create and add to course</button>
        </div>
      </form>
    </div>
  </div>
</Layout>

<script>
  import { get, post } from '@/lib/api';
  import type { AdminCourse, AdminLesson, AdminCourseWithItems } from '@/lib/api-types';

  const root = document.getElementById('admin-leccion-nueva-root');
  const courseId = root?.getAttribute('data-course-id') ?? '';

  const backLink = document.getElementById('back-link');
  const cancelLink = document.getElementById('cancel-link');
  const courseTitleEl = document.getElementById('course-title');
  const form = document.getElementById('lesson-form') as HTMLFormElement;
  const errorEl = document.getElementById('form-error');

  if (backLink) backLink.setAttribute('href', `/admin/curso/${courseId}/editar`);
  if (cancelLink) cancelLink.setAttribute('href', `/admin/curso/${courseId}/editar`);

  get<AdminCourse>(`/admin/courses/${courseId}`).then((c) => {
    if (courseTitleEl) courseTitleEl.textContent = c.title ?? '';
  }).catch(() => {});

  form?.addEventListener('submit', async (e) => {
    e.preventDefault();
    if (errorEl) errorEl.classList.add('hidden');
    const title = (form.querySelector('#title') as HTMLInputElement)?.value?.trim();
    const content = (form.querySelector('#content') as HTMLTextAreaElement)?.value?.trim() ?? '';
    const videoUrl = (form.querySelector('#video-url') as HTMLInputElement)?.value?.trim() || undefined;
    if (!title) return;
    try {
      const lessonPayload: { title: string; content: string; video_url?: string } = { title, content };
      if (videoUrl) lessonPayload.video_url = videoUrl;
      const lesson = await post<AdminLesson>(`/admin/courses/${courseId}/lessons`, { lesson: lessonPayload });
      
      // Get course items to determine the last position
      const raw = await get<AdminCourseWithItems | { course: AdminCourseWithItems }>(`/admin/courses/${courseId}`);
      const course = (raw as { course?: AdminCourseWithItems }).course ?? (raw as AdminCourseWithItems);
      const courseItems = course?.course_items ?? [];
      const maxPosition = courseItems.length > 0 
        ? Math.max(...courseItems.map(item => item.position ?? 0))
        : -1;
      const newPosition = maxPosition + 1;
      
      await post(`/admin/courses/${courseId}/course_items`, {
        course_item: { item_type: 'Lesson', item_id: lesson.id, position: newPosition },
      });
      window.location.href = `/admin/curso/${courseId}/editar`;
    } catch (err: unknown) {
      const apiErr = err as { body?: { error?: string; errors?: string[] } };
      if (errorEl) {
        errorEl.textContent = apiErr?.body?.error || (Array.isArray(apiErr?.body?.errors) && apiErr.body.errors[0]) || 'Error creating lesson';
        errorEl.classList.remove('hidden');
      }
    }
  });
</script>
