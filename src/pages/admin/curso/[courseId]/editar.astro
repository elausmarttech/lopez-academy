---
import Layout from '../../../../layouts/Layout.astro';
import { courses, categories, levels } from '@/data/courses';

export function getStaticPaths() {
  return courses.map((course) => ({
    params: { courseId: course.id },
    props: { course },
  }));
}

const { course } = Astro.props;
const formCategories = categories.filter((c) => c !== 'All');
const formLevels = levels.filter((l) => l !== 'All');
---
<Layout title={`Edit ${course.title} - AprendePlus`}>
  <div class="min-h-screen bg-white py-12">
    <div class="max-w-3xl mx-auto px-6">
      <div class="mb-8">
        <a href="/admin" class="inline-flex items-center gap-2 text-[#2F7FBF] hover:underline mb-4">
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"/></svg>
          Back to course list
        </a>
        <h1 class="text-3xl font-bold text-[#2B2B2B] mb-2">Edit course</h1>
        <p class="text-gray-600">Update the course information</p>
      </div>

      <form class="space-y-6 bg-white border border-gray-200 rounded-xl p-6">
        <div>
          <label for="title" class="block text-sm font-medium text-[#2B2B2B] mb-2">Course title *</label>
          <input type="text" id="title" name="title" required value={course.title} class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-[#2F7FBF] focus:border-transparent" />
        </div>

        <div>
          <label for="shortDescription" class="block text-sm font-medium text-[#2B2B2B] mb-2">Short description *</label>
          <input type="text" id="shortDescription" name="shortDescription" required value={course.shortDescription} class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-[#2F7FBF] focus:border-transparent" />
        </div>

        <div>
          <label for="description" class="block text-sm font-medium text-[#2B2B2B] mb-2">Full description *</label>
          <textarea id="description" name="description" rows="4" required class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-[#2F7FBF] focus:border-transparent">{course.description}</textarea>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
          <div>
            <label for="instructor" class="block text-sm font-medium text-[#2B2B2B] mb-2">Instructor *</label>
            <input type="text" id="instructor" name="instructor" required value={course.instructor} class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-[#2F7FBF] focus:border-transparent" />
          </div>
          <div>
            <label for="duration" class="block text-sm font-medium text-[#2B2B2B] mb-2">Duration *</label>
            <input type="text" id="duration" name="duration" required value={course.duration} class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-[#2F7FBF] focus:border-transparent" />
          </div>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
          <div>
            <label for="category" class="block text-sm font-medium text-[#2B2B2B] mb-2">Category *</label>
            <select id="category" name="category" required class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-[#2F7FBF] focus:border-transparent bg-white">
              {formCategories.map((cat) => (
                <option value={cat} selected={course.category === cat}>{cat}</option>
              ))}
            </select>
          </div>
          <div>
            <label for="level" class="block text-sm font-medium text-[#2B2B2B] mb-2">Level *</label>
            <select id="level" name="level" required class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-[#2F7FBF] focus:border-transparent bg-white">
              {formLevels.map((lvl) => (
                <option value={lvl} selected={course.level === lvl}>{lvl}</option>
              ))}
            </select>
          </div>
        </div>

        <div>
          <label for="image" class="block text-sm font-medium text-[#2B2B2B] mb-2">Image URL *</label>
          <input type="url" id="image" name="image" required value={course.image} class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-[#2F7FBF] focus:border-transparent" />
        </div>

        <div class="border-t border-gray-200 pt-6">
          <a href={`/admin/curso/${course.id}/lecciones`} class="inline-flex items-center gap-2 text-[#2F7FBF] hover:underline font-medium">
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"/></svg>
            Manage lessons ({course.lessons.length})
          </a>
        </div>

        <div class="flex justify-end gap-3 pt-4">
          <a href="/admin" class="px-6 py-3 border border-gray-300 rounded-lg text-gray-700 hover:bg-gray-50 transition-colors">Cancel</a>
          <button type="submit" class="px-6 py-3 bg-[#2F7FBF] text-white rounded-lg hover:bg-[#256A9E] transition-colors font-medium">
            Save changes
          </button>
        </div>
      </form>
    </div>
  </div>
</Layout>

<script>
  document.querySelector('form')?.addEventListener('submit', (e) => {
    e.preventDefault();
    alert('Changes saved successfully. (Frontend: data is not saved without backend)');
    window.location.href = '/admin';
  });
</script>
