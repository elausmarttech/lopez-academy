---
import Layout from '../../../../layouts/Layout.astro';
import { courses } from '@/data/courses';
import { users } from '@/data/users';

export function getStaticPaths() {
  return courses.map((course) => ({
    params: { courseId: course.id },
    props: { course },
  }));
}

const { course } = Astro.props;
const allUsers = users.filter((u) => u.role === 'user');
---
<Layout title={`Configure ${course.title} - AprendePlus`}>
  <div class="min-h-screen bg-white py-12">
    <div class="max-w-4xl mx-auto px-6">
      <div class="mb-8">
        <a href="/admin" class="inline-flex items-center gap-2 text-[#2F7FBF] hover:underline mb-4">
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"/></svg>
          Back to course list
        </a>
        <h1 class="text-3xl font-bold text-[#2B2B2B] mb-2">Configure course: {course.title}</h1>
        <p class="text-gray-600">Control parameters and user access to the course and its lessons</p>
      </div>

      <div class="space-y-8">
        <!-- Course parameters -->
        <div class="bg-white border border-gray-200 rounded-xl p-6">
          <h2 class="text-xl font-bold text-[#2B2B2B] mb-4">Course parameters</h2>
          <div class="space-y-4">
            <div>
              <label class="block text-sm font-medium text-[#2B2B2B] mb-2">Lesson order</label>
              <select class="w-full max-w-xs px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-[#2F7FBF]">
                <option>Sequential (default)</option>
                <option>Free (user chooses)</option>
              </select>
            </div>
            <div class="flex items-center justify-between">
              <div>
                <p class="font-medium text-[#2B2B2B]">Require completing previous lesson</p>
                <p class="text-sm text-gray-600">Users must complete each lesson in order</p>
              </div>
              <label class="relative inline-flex items-center cursor-pointer">
                <input type="checkbox" checked class="sr-only peer" />
                <div class="w-11 h-6 bg-gray-200 rounded-full peer peer-checked:bg-[#2F7FBF] after:content-[''] after:absolute after:top-[2px] after:left-[2px] after:bg-white after:border after:rounded-full after:h-5 after:w-5 after:transition-all peer-checked:after:translate-x-full"></div>
              </label>
            </div>
          </div>
        </div>

        <!-- User access control -->
        <div class="bg-white border border-gray-200 rounded-xl p-6">
          <h2 class="text-xl font-bold text-[#2B2B2B] mb-2">User access to course</h2>
          <p class="text-sm text-gray-600 mb-6">Select which users have access to this course and its lessons</p>

          <div class="flex flex-col sm:flex-row gap-4 mb-6">
            <div class="flex-1">
              <div class="relative">
                <svg class="absolute left-4 top-1/2 -translate-y-1/2 w-5 h-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"/></svg>
                <input
                  type="text"
                  id="user-access-search"
                  placeholder="Search by name or email..."
                  class="w-full pl-12 pr-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-[#2F7FBF] focus:border-transparent"
                />
              </div>
            </div>
            <div class="flex items-center gap-4">
              <span class="text-sm font-medium text-[#2B2B2B]">Access:</span>
              <div class="flex gap-4">
                <label class="flex items-center gap-2 cursor-pointer">
                  <input type="radio" name="access-mode" value="all" class="w-4 h-4 text-[#2F7FBF] focus:ring-[#2F7FBF]" />
                  <span class="text-sm text-gray-700">All users</span>
                </label>
                <label class="flex items-center gap-2 cursor-pointer">
                  <input type="radio" name="access-mode" value="specific" checked class="w-4 h-4 text-[#2F7FBF] focus:ring-[#2F7FBF]" />
                  <span class="text-sm text-gray-700">Specific users</span>
                </label>
              </div>
            </div>
          </div>

          <div id="user-access-list" class="space-y-3">
            {allUsers.map((user) => {
              const hasAccess = user.enrolledCourses.includes(course.id);
              return (
                <div class="user-access-row flex items-center justify-between p-4 border border-gray-200 rounded-lg hover:bg-[#FFF0CE]/20 transition-colors" data-name={user.name.toLowerCase()} data-email={user.email.toLowerCase()}>
                  <div class="flex items-center gap-3">
                    <div class="w-10 h-10 bg-[#2F7FBF] rounded-full flex items-center justify-center text-white font-semibold">
                      {user.name.charAt(0)}
                    </div>
                    <div>
                      <p class="font-medium text-[#2B2B2B]">{user.name}</p>
                      <p class="text-sm text-gray-600">{user.email}</p>
                    </div>
                  </div>
                  <label class="flex items-center gap-2 cursor-pointer">
                    <span class="text-sm text-gray-600">Access enabled</span>
                    <input type="checkbox" checked={hasAccess} class="w-5 h-5 rounded border-gray-300 text-[#2F7FBF] focus:ring-[#2F7FBF]" />
                  </label>
                </div>
              );
            })}
          </div>
          <p id="user-access-empty" class="hidden text-center text-gray-500 py-6">Ningún usuario coincide con la búsqueda</p>
          <p id="user-access-all-msg" class="hidden text-center text-gray-600 py-6 bg-[#FFF0CE]/30 rounded-lg">
            El curso está disponible para todos los usuarios de la plataforma.
          </p>
        </div>

        <!-- Acceso por lección -->
        <div class="bg-white border border-gray-200 rounded-xl p-6">
          <h2 class="text-xl font-bold text-[#2B2B2B] mb-2">Control por lección</h2>
          <p class="text-sm text-gray-600 mb-6">Habilita o deshabilita lecciones específicas para todos los usuarios del curso</p>
          <div class="space-y-2">
            {course.lessons.map((lesson, index) => (
              <div class="flex items-center justify-between p-3 border border-gray-200 rounded-lg">
                <div class="flex items-center gap-3">
                  <div class="w-8 h-8 bg-[#EEEEEE] rounded-full flex items-center justify-center text-sm font-semibold text-[#2B2B2B]">
                    {index + 1}
                  </div>
                  <div>
                    <p class="font-medium text-[#2B2B2B]">{lesson.title}</p>
                    <p class="text-xs text-gray-500">{lesson.duration}</p>
                  </div>
                </div>
                <label class="flex items-center gap-2 cursor-pointer">
                  <span class="text-sm text-gray-600">Enabled</span>
                  <input type="checkbox" checked class="w-5 h-5 rounded border-gray-300 text-[#2F7FBF] focus:ring-[#2F7FBF]" />
                </label>
              </div>
            ))}
          </div>
        </div>

        <div class="flex justify-end">
          <button type="button" class="flex items-center gap-2 bg-[#2F7FBF] text-white px-6 py-3 rounded-lg hover:bg-[#256A9E] transition-colors font-medium">
            Save changes
          </button>
        </div>
      </div>
    </div>
  </div>
</Layout>

<script>
  const searchInput = document.getElementById('user-access-search');
  const searchWrapper = searchInput?.closest('.flex-1');
  const listContainer = document.getElementById('user-access-list');
  const emptyMessage = document.getElementById('user-access-empty');
  const allMsg = document.getElementById('user-access-all-msg');
  const accessRadios = document.querySelectorAll('input[name="access-mode"]');

  function filterUsers() {
    const q = ((searchInput as HTMLInputElement | null)?.value ?? '').toLowerCase();
    const rows = listContainer?.querySelectorAll('.user-access-row') ?? [];
    let visible = 0;
    rows.forEach((row) => {
      const el = row as HTMLElement;
      const match = !q || (el.dataset.name ?? '').includes(q) || (el.dataset.email ?? '').includes(q);
      el.style.display = match ? '' : 'none';
      if (match) visible++;
    });
    if (emptyMessage) emptyMessage.classList.toggle('hidden', visible > 0);
  }

  function toggleListVisibility() {
    const mode = (document.querySelector('input[name="access-mode"]:checked') as HTMLInputElement | null)?.value ?? 'specific';
    const isSpecific = mode === 'specific';
    if (listContainer) listContainer.classList.toggle('hidden', !isSpecific);
    if (searchWrapper) searchWrapper.classList.toggle('hidden', !isSpecific);
    if (emptyMessage) emptyMessage.classList.add('hidden');
    if (allMsg) allMsg.classList.toggle('hidden', isSpecific);
  }

  searchInput?.addEventListener('input', filterUsers);
  accessRadios.forEach((r) => r.addEventListener('change', toggleListVisibility));
  toggleListVisibility();
</script>
