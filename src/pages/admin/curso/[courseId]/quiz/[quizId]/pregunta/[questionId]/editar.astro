---
import Layout from '@/layouts/Layout.astro';

export const prerender = false;
const { courseId, quizId, questionId } = Astro.params;
---
<Layout title="Edit question - AprendePlus" currentPath="/admin">
  <div id="pregunta-editar-root" class="min-h-screen bg-white py-12" data-course-id={courseId ?? ''} data-quiz-id={quizId ?? ''} data-question-id={questionId ?? ''}>
    <div class="max-w-xl mx-auto px-6">
      <div class="mb-8">
        <a href={`/admin/curso/${courseId}/quiz/${quizId}/editar`} class="inline-flex items-center gap-2 text-[#2F7FBF] hover:underline mb-4">
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"/></svg>
          Back to quiz
        </a>
        <h1 class="text-2xl font-bold text-[#2B2B2B] mb-1">Edit question</h1>
      </div>

      <div id="form-error" class="hidden mb-4 p-3 bg-red-50 text-red-700 rounded-lg"></div>
      <div id="form-loading" class="text-gray-500">Loading...</div>

      <form id="question-form" class="hidden space-y-6 bg-white border border-gray-200 rounded-xl p-6">
        <div>
          <label for="body" class="block text-sm font-medium text-[#2B2B2B] mb-2">Question text *</label>
          <textarea id="body" name="body" rows="3" required class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-[#2F7FBF]"></textarea>
        </div>
        <div>
          <label for="question_type" class="block text-sm font-medium text-[#2B2B2B] mb-2">Type</label>
          <select id="question_type" class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-[#2F7FBF]">
            <option value="multiple_choice">Multiple choice</option>
            <option value="true_false">True / False</option>
          </select>
        </div>
        <div id="options-multiple" class="space-y-2">
          <label class="block text-sm font-medium text-[#2B2B2B]">Options (mark the correct one)</label>
          <div class="flex gap-2 items-center"><input type="radio" name="correct" value="a" /><input type="text" id="option_a" placeholder="Option A" class="flex-1 px-3 py-2 border rounded-lg" /></div>
          <div class="flex gap-2 items-center"><input type="radio" name="correct" value="b" /><input type="text" id="option_b" placeholder="Option B" class="flex-1 px-3 py-2 border rounded-lg" /></div>
          <div class="flex gap-2 items-center"><input type="radio" name="correct" value="c" /><input type="text" id="option_c" placeholder="Option C" class="flex-1 px-3 py-2 border rounded-lg" /></div>
          <div class="flex gap-2 items-center"><input type="radio" name="correct" value="d" /><input type="text" id="option_d" placeholder="Option D" class="flex-1 px-3 py-2 border rounded-lg" /></div>
        </div>
        <div id="options-tf" class="hidden">
          <label class="block text-sm font-medium text-[#2B2B2B]">Correct answer</label>
          <div class="flex gap-4 mt-2">
            <label class="flex items-center gap-2"><input type="radio" name="correct_tf" value="true" /> True</label>
            <label class="flex items-center gap-2"><input type="radio" name="correct_tf" value="false" /> False</label>
          </div>
        </div>
        <div class="flex justify-end gap-3">
          <a href={`/admin/curso/${courseId}/quiz/${quizId}/editar`} class="px-6 py-3 border border-gray-300 rounded-lg text-gray-700 hover:bg-gray-50">Cancel</a>
          <button type="submit" class="px-6 py-3 bg-[#2F7FBF] text-white rounded-lg hover:bg-[#256A9E] font-medium">Save</button>
        </div>
      </form>
    </div>
  </div>
</Layout>

<script>
  import { get, patch } from '@/lib/api';
  import type { AdminQuestion } from '@/lib/api-types';

  const root = document.getElementById('pregunta-editar-root');
  const courseId = root?.getAttribute('data-course-id') ?? '';
  const quizId = root?.getAttribute('data-quiz-id') ?? '';
  const questionId = root?.getAttribute('data-question-id') ?? '';

  const form = document.getElementById('question-form') as HTMLFormElement;
  const formLoading = document.getElementById('form-loading');
  const questionType = document.getElementById('question_type') as HTMLSelectElement;
  const optionsMultiple = document.getElementById('options-multiple');
  const optionsTf = document.getElementById('options-tf');
  const errorEl = document.getElementById('form-error');

  questionType?.addEventListener('change', () => {
    const isTf = questionType.value === 'true_false';
    if (optionsMultiple) optionsMultiple.classList.toggle('hidden', isTf);
    if (optionsTf) optionsTf.classList.toggle('hidden', !isTf);
  });

  function normalizeCorrectAnswer(value: unknown, questionType: string): string {
    const s = value == null ? '' : String(value).toLowerCase().trim();
    if (questionType === 'true_false') return s === 'false' ? 'false' : 'true';
    if (['a', 'b', 'c', 'd'].includes(s)) return s;
    return 'a';
  }

  async function load() {
    try {
      const q = await get<AdminQuestion>(`/admin/courses/${courseId}/quizzes/${quizId}/questions/${questionId}`);
      (form.querySelector('#body') as HTMLTextAreaElement).value = q.body ?? '';
      const qType = q.question_type === 'true_false' ? 'true_false' : 'multiple_choice';
      if (questionType) questionType.value = qType;
      const correctAnswer = normalizeCorrectAnswer(q.correct_answer, qType);
      if (qType === 'true_false') {
        if (optionsMultiple) optionsMultiple.classList.add('hidden');
        if (optionsTf) optionsTf.classList.remove('hidden');
        const r = form.querySelector(`input[name="correct_tf"][value="${correctAnswer}"]`) as HTMLInputElement | null;
        if (r) r.checked = true;
      } else {
        (form.querySelector('#option_a') as HTMLInputElement).value = q.option_a ?? '';
        (form.querySelector('#option_b') as HTMLInputElement).value = q.option_b ?? '';
        (form.querySelector('#option_c') as HTMLInputElement).value = q.option_c ?? '';
        (form.querySelector('#option_d') as HTMLInputElement).value = q.option_d ?? '';
        const r = form.querySelector(`input[name="correct"][value="${correctAnswer}"]`) as HTMLInputElement | null;
        if (r) r.checked = true;
      }
      if (formLoading) formLoading.classList.add('hidden');
      if (form) form.classList.remove('hidden');
    } catch (e: unknown) {
      if (formLoading) formLoading.textContent = 'Error loading.';
      if (errorEl) {
        errorEl.textContent = (e as { body?: { error?: string } })?.body?.error || 'Error';
        errorEl.classList.remove('hidden');
      }
    }
  }

  form?.addEventListener('submit', async (e) => {
    e.preventDefault();
    if (errorEl) errorEl.classList.add('hidden');
    const body = (form.querySelector('#body') as HTMLTextAreaElement)?.value?.trim();
    const question_type = (questionType?.value ?? 'multiple_choice') as string;
    if (!body) {
      if (errorEl) { errorEl.textContent = 'Enter the question text.'; errorEl.classList.remove('hidden'); }
      return;
    }
    const correctTf = form.querySelector('input[name="correct_tf"]:checked') as HTMLInputElement | null;
    const correctMc = form.querySelector('input[name="correct"]:checked') as HTMLInputElement | null;
    let correct_answer: string;
    if (question_type === 'true_false') {
      if (!correctTf?.value) {
        if (errorEl) { errorEl.textContent = 'Select the correct answer (True or False).'; errorEl.classList.remove('hidden'); }
        return;
      }
      correct_answer = String(correctTf.value).toLowerCase();
      if (correct_answer !== 'true' && correct_answer !== 'false') correct_answer = 'true';
    } else {
      if (!correctMc?.value) {
        if (errorEl) { errorEl.textContent = 'Mark the correct option (A, B, C or D).'; errorEl.classList.remove('hidden'); }
        return;
      }
      correct_answer = String(correctMc.value).toLowerCase();
      if (!['a', 'b', 'c', 'd'].includes(correct_answer)) correct_answer = 'a';
    }
    const payload: Record<string, unknown> = {
      question: { body, question_type, correct_answer },
    };
    if (question_type === 'multiple_choice') {
      (payload.question as Record<string, unknown>).option_a = (form.querySelector('#option_a') as HTMLInputElement)?.value?.trim() ?? '';
      (payload.question as Record<string, unknown>).option_b = (form.querySelector('#option_b') as HTMLInputElement)?.value?.trim() ?? '';
      (payload.question as Record<string, unknown>).option_c = (form.querySelector('#option_c') as HTMLInputElement)?.value?.trim();
      (payload.question as Record<string, unknown>).option_d = (form.querySelector('#option_d') as HTMLInputElement)?.value?.trim();
    }
    try {
      await patch(`/admin/courses/${courseId}/quizzes/${quizId}/questions/${questionId}`, payload);
      window.location.href = `/admin/curso/${courseId}/quiz/${quizId}/editar`;
    } catch (err: unknown) {
      const apiErr = err as { body?: { error?: string; errors?: string[] } };
      if (errorEl) {
        errorEl.textContent = apiErr?.body?.error || (Array.isArray(apiErr?.body?.errors) && apiErr.body.errors[0]) || 'Error saving.';
        errorEl.classList.remove('hidden');
      }
    }
  });

  if (courseId && quizId && questionId) load();
</script>
