---
import Layout from '@/layouts/Layout.astro';

export const prerender = false;
const { courseId, quizId } = Astro.params;
---
<Layout title="Edit quiz - AprendePlus" currentPath="/admin">
  <div id="admin-quiz-editar-root" class="min-h-screen bg-white py-12" data-course-id={courseId ?? ''} data-quiz-id={quizId ?? ''}>
    <div class="max-w-2xl mx-auto px-6">
      <div class="mb-8">
        <a href={`/admin/curso/${courseId}/lecciones`} class="inline-flex items-center gap-2 text-[#2F7FBF] hover:underline mb-4">
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"/></svg>
          Back to lessons
        </a>
        <h1 id="page-title" class="text-2xl font-bold text-[#2B2B2B] mb-1">Edit quiz</h1>
      </div>

      <div id="quiz-error" class="hidden mb-4 p-3 bg-red-50 text-red-700 rounded-lg"></div>
      <div id="quiz-loading" class="text-gray-500">Loading...</div>

      <form id="quiz-form" class="hidden space-y-6 bg-white border border-gray-200 rounded-xl p-6 mb-8">
        <div>
          <label for="title" class="block text-sm font-medium text-[#2B2B2B] mb-2">Quiz title *</label>
          <input type="text" id="title" name="title" required class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-[#2F7FBF]" />
        </div>
        <div class="flex justify-end">
          <button type="submit" class="px-6 py-3 bg-[#2F7FBF] text-white rounded-lg hover:bg-[#256A9E] font-medium">Save title</button>
        </div>
      </form>

      <div id="questions-section" class="hidden bg-white border border-gray-200 rounded-xl p-6">
        <h2 class="text-lg font-semibold text-[#2B2B2B] mb-4">Questions</h2>
        <ul id="questions-list" class="space-y-3"></ul>
        <a id="link-add-question" href="#" class="inline-block mt-4 text-[#2F7FBF] hover:underline font-medium">+ Add question</a>
      </div>
    </div>
  </div>
</Layout>

<script>
  import { get, patch, del } from '@/lib/api';
  import type { AdminQuiz, AdminQuestion } from '@/lib/api-types';

  const root = document.getElementById('admin-quiz-editar-root');
  const courseId = root?.getAttribute('data-course-id') ?? '';
  const quizId = root?.getAttribute('data-quiz-id') ?? '';

  interface QuizWithQuestions extends AdminQuiz {
    questions?: AdminQuestion[];
  }

  const pageTitle = document.getElementById('page-title');
  const quizLoading = document.getElementById('quiz-loading');
  const quizForm = document.getElementById('quiz-form') as HTMLFormElement;
  const questionsSection = document.getElementById('questions-section');
  const questionsList = document.getElementById('questions-list');
  const linkAddQuestion = document.getElementById('link-add-question');
  const errorEl = document.getElementById('quiz-error');

  function showError(msg: string) {
    if (errorEl) {
      errorEl.textContent = msg;
      errorEl.classList.remove('hidden');
    }
  }

  function escapeHtml(s: string): string {
    const div = document.createElement('div');
    div.textContent = s;
    return div.innerHTML;
  }

  async function load() {
    try {
      const quiz = await get<QuizWithQuestions>(`/admin/courses/${courseId}/quizzes/${quizId}`);
      const questions = await get<AdminQuestion[]>(`/admin/courses/${courseId}/quizzes/${quizId}/questions`).catch(() => []);

      if (pageTitle) pageTitle.textContent = `Edit: ${quiz.title}`;
      (quizForm.querySelector('#title') as HTMLInputElement).value = quiz.title ?? '';
      if (quizLoading) quizLoading.classList.add('hidden');
      if (quizForm) quizForm.classList.remove('hidden');
      if (questionsSection) questionsSection.classList.remove('hidden');

      if (linkAddQuestion) linkAddQuestion.setAttribute('href', `/admin/curso/${courseId}/quiz/${quizId}/pregunta/nueva`);

      if (questionsList) {
        questionsList.innerHTML = (questions || [])
          .sort((a, b) => (a.position ?? 0) - (b.position ?? 0))
          .map(
            (q) => `
          <li class="flex items-center justify-between p-3 border border-gray-200 rounded-lg">
            <div>
              <p class="font-medium text-[#2B2B2B]">${escapeHtml(q.body || '')}</p>
              <p class="text-xs text-gray-500">${q.question_type === 'true_false' ? 'True/False' : 'Multiple choice'}</p>
            </div>
            <div class="flex gap-2">
              <a href="/admin/curso/${courseId}/quiz/${quizId}/pregunta/${q.id}/editar" class="text-[#2F7FBF] hover:underline text-sm">Edit</a>
              <button type="button" class="question-delete text-red-500 hover:underline text-sm" data-id="${q.id}">Delete</button>
            </div>
          </li>
        `
          )
          .join('');

        questionsList.querySelectorAll('.question-delete').forEach((btn) => {
          btn.addEventListener('click', async () => {
            const id = (btn as HTMLElement).dataset.id;
            if (!id || !confirm('Delete this question?')) return;
            try {
              await del(`/admin/courses/${courseId}/quizzes/${quizId}/questions/${id}`);
              load();
            } catch (e: unknown) {
              const err = e as { body?: { error?: string } };
              showError(err?.body?.error || 'Error deleting');
            }
          });
        });
      }
    } catch (e: unknown) {
      const err = e as { status?: number; body?: { error?: string } };
      if (err.status === 403) {
        window.location.href = '/admin/forbidden';
        return;
      }
      if (quizLoading) quizLoading.textContent = 'Error loading.';
      showError(err?.body?.error || 'Error loading');
    }
  }

  quizForm?.addEventListener('submit', async (e) => {
    e.preventDefault();
    if (errorEl) errorEl.classList.add('hidden');
    const title = (quizForm.querySelector('#title') as HTMLInputElement)?.value?.trim();
    if (!title) return;
    try {
      await patch(`/admin/courses/${courseId}/quizzes/${quizId}`, { quiz: { title } });
      if (pageTitle) pageTitle.textContent = `Edit: ${title}`;
    } catch (err: unknown) {
      const apiErr = err as { body?: { error?: string } };
      showError(apiErr?.body?.error || 'Error saving');
    }
  });

  if (courseId && quizId) load();
</script>
