---
import Layout from '../../layouts/Layout.astro';

export const prerender = false;
---
<Layout title="Course Management - AprendePlus" currentPath="/admin">
  <div class="min-h-screen bg-white py-12">
    <div class="max-w-7xl mx-auto px-6">
      <div class="flex items-center justify-between mb-8">
        <div>
          <h1 class="text-3xl font-bold text-[#2B2B2B] mb-2">Course Management</h1>
          <p class="text-gray-600">Manage platform content</p>
        </div>
        <div class="flex items-center gap-3">
          <a href="/admin/curso/nuevo" class="flex items-center gap-2 bg-[#2F7FBF] text-white px-6 py-3 rounded-lg hover:bg-[#256A9E] transition-colors">
            + Create Course
          </a>
        </div>
      </div>

      <div class="mb-6">
        <input type="text" id="admin-search" placeholder="Search courses..." class="w-full max-w-md px-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-[#2F7FBF] focus:border-transparent" />
      </div>

      <div id="admin-error" class="hidden mb-4 p-3 bg-red-50 text-red-700 rounded-lg"></div>

      <div class="bg-white border border-gray-200 rounded-xl overflow-hidden">
        <table class="w-full">
          <thead class="bg-[#EEEEEE]">
            <tr>
              <th class="text-left px-6 py-4 text-sm font-semibold text-[#2B2B2B]">Course</th>
              <th class="text-left px-6 py-4 text-sm font-semibold text-[#2B2B2B]">Description</th>
              <th class="text-center px-6 py-4 text-sm font-semibold text-[#2B2B2B]">Actions</th>
            </tr>
          </thead>
          <tbody id="admin-tbody" class="divide-y divide-gray-200">
            <tr><td colspan="3" class="px-6 py-8 text-center text-gray-500">Loading...</td></tr>
          </tbody>
        </table>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-2 gap-6 mt-8">
        <div class="bg-[#FFF0CE] rounded-xl p-6">
          <p class="text-sm text-gray-700 mb-1">Total Courses</p>
          <p id="admin-total" class="text-3xl font-bold text-[#2B2B2B]">0</p>
        </div>
      </div>
    </div>
  </div>
</Layout>

<script>
  import { get, del } from '@/lib/api';
  import type { AdminCourse } from '@/lib/api-types';

  const tbody = document.getElementById('admin-tbody');
  const searchEl = document.getElementById('admin-search') as HTMLInputElement;
  const totalEl = document.getElementById('admin-total');
  const errorEl = document.getElementById('admin-error');

  function showError(msg: string) {
    if (errorEl) {
      errorEl.textContent = msg;
      errorEl.classList.remove('hidden');
    }
  }

  function escapeHtml(s: string): string {
    const div = document.createElement('div');
    div.textContent = s;
    return div.innerHTML;
  }

  function render(courses: AdminCourse[]) {
    if (!tbody) return;
    tbody.innerHTML = courses
      .map(
        (c) => `
      <tr class="admin-course-row hover:bg-[#FFF0CE]/30 transition-colors" data-title="${escapeHtml((c.title || '').toLowerCase())}" data-description="${escapeHtml((c.description || '').toLowerCase())}">
        <td class="px-6 py-4">
          <p class="font-medium text-[#2B2B2B]">${escapeHtml(c.title)}</p>
        </td>
        <td class="px-6 py-4 text-sm text-gray-600 line-clamp-2">${escapeHtml((c.description || '').slice(0, 100))}${(c.description || '').length > 100 ? '‚Ä¶' : ''}</td>
        <td class="px-6 py-4">
          <div class="flex items-center justify-center gap-2">
            <a href="/admin/curso/${c.id}/editar" class="p-2 text-[#2F7FBF] hover:bg-[#FFF0CE] rounded-lg transition-colors" title="Edit">‚úèÔ∏è</a>
            <button type="button" class="admin-delete p-2 text-red-500 hover:bg-red-50 rounded-lg transition-colors" data-id="${c.id}" title="Delete">üóë</button>
          </div>
        </td>
      </tr>
    `
      )
      .join('');

    if (totalEl) totalEl.textContent = String(courses.length);

    tbody.querySelectorAll('.admin-delete').forEach((btn) => {
      btn.addEventListener('click', async () => {
        const id = (btn as HTMLElement).dataset.id;
        if (!id || !confirm('Delete this course?')) return;
        try {
          await del(`/admin/courses/${id}`);
          load();
        } catch (e: unknown) {
          const err = e as { body?: { error?: string; errors?: string[] } };
          showError(err?.body?.error || (Array.isArray(err?.body?.errors) && err.body.errors[0]) || 'Error deleting');
        }
      });
    });
  }

  async function load() {
    if (errorEl) errorEl.classList.add('hidden');
    try {
      const data = (await get<AdminCourse[]>('/admin/courses')) ?? [];
      render(data);
    } catch (e: unknown) {
      const err = e as { status?: number; body?: { error?: string } };
      if (err.status === 403) {
        window.location.href = '/admin/forbidden';
        return;
      }
      showError(err?.body?.error || 'Error loading courses');
      if (tbody) tbody.innerHTML = '<tr><td colspan="3" class="px-6 py-8 text-center text-red-600">Error loading</td></tr>';
    }
  }

  searchEl?.addEventListener('input', () => {
    const q = (searchEl.value ?? '').toLowerCase();
    document.querySelectorAll('.admin-course-row').forEach((row: Element) => {
      const el = row as HTMLElement;
      const match = !q || (el.dataset.title ?? '').includes(q) || (el.dataset.description ?? '').includes(q);
      el.style.display = match ? '' : 'none';
    });
  });

  load();
</script>
