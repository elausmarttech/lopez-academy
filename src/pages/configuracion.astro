---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Settings - AprendePlus" currentPath="/configuracion">
  <div class="min-h-screen bg-white py-12">
    <div class="max-w-4xl mx-auto px-6">
      <div class="flex items-center justify-between mb-8">
        <div>
          <h1 class="text-3xl font-bold text-[#2B2B2B] mb-2">Settings</h1>
          <p class="text-gray-600">Manage general platform settings</p>
        </div>
      </div>

      <div class="space-y-6">
        <div class="bg-white border border-gray-200 rounded-xl p-6">
          <h2 class="text-xl font-bold text-[#2B2B2B] mb-4">Certificates</h2>
          <div class="space-y-4">
            <div class="flex items-center justify-between">
              <div>
                <p class="font-medium text-[#2B2B2B]">Enable certificates</p>
                <p class="text-sm text-gray-600">Users will receive certificates when completing courses</p>
              </div>
              <label class="relative inline-flex items-center cursor-pointer">
                <input type="checkbox" id="cert-enabled" checked class="sr-only peer" />
                <div class="w-11 h-6 bg-gray-200 rounded-full peer peer-checked:bg-[#2F7FBF] after:content-[''] after:absolute after:top-[2px] after:left-[2px] after:bg-white after:border after:rounded-full after:h-5 after:w-5 after:transition-all peer-checked:after:translate-x-full"></div>
              </label>
            </div>
            <div>
              <label for="passing-score" class="block font-medium text-[#2B2B2B] mb-2">Minimum score for certificate (%)</label>
              <input type="number" id="passing-score" min="0" max="100" value="70" class="w-full max-w-xs px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-[#2F7FBF]" />
              <p class="text-sm text-gray-600 mt-1">Users must score at least this to receive the certificate</p>
            </div>
          </div>
        </div>

        <div class="bg-white border border-gray-200 rounded-xl p-6">
          <h2 class="text-xl font-bold text-[#2B2B2B] mb-4">Notifications</h2>
          <div class="flex items-center justify-between">
            <div>
              <p class="font-medium text-[#2B2B2B]">Email notifications</p>
              <p class="text-sm text-gray-600">Send emails when users complete lessons or courses</p>
            </div>
            <label class="relative inline-flex items-center cursor-pointer">
              <input type="checkbox" id="email-notif" checked class="sr-only peer" />
              <div class="w-11 h-6 bg-gray-200 rounded-full peer peer-checked:bg-[#2F7FBF] after:content-[''] after:absolute after:top-[2px] after:left-[2px] after:bg-white after:border after:rounded-full after:h-5 after:w-5 after:transition-all peer-checked:after:translate-x-full"></div>
            </label>
          </div>
        </div>

        <div class="bg-white border border-gray-200 rounded-xl p-6">
          <h2 class="text-xl font-bold text-[#2B2B2B] mb-4">System</h2>
          <div class="flex items-center justify-between">
            <div>
              <p class="font-medium text-[#2B2B2B]">Maintenance mode</p>
              <p class="text-sm text-gray-600">Temporarily disable the platform for maintenance</p>
            </div>
            <label class="relative inline-flex items-center cursor-pointer">
              <input type="checkbox" id="maintenance" class="sr-only peer" />
              <div class="w-11 h-6 bg-gray-200 rounded-full peer peer-checked:bg-[#2F7FBF] after:content-[''] after:absolute after:top-[2px] after:left-[2px] after:bg-white after:border after:rounded-full after:h-5 after:w-5 after:transition-all peer-checked:after:translate-x-full"></div>
            </label>
          </div>
        </div>

        <div class="flex justify-end">
          <button type="button" id="save-settings" class="flex items-center gap-2 bg-[#2F7FBF] text-white px-6 py-3 rounded-lg hover:bg-[#256A9E] transition-colors">
            Save changes
          </button>
        </div>
      </div>
    </div>
  </div>
</Layout>

<script>
  document.getElementById('save-settings')?.addEventListener('click', () => {
    alert('Settings saved successfully');
  });
</script>
