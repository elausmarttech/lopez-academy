---
interface Props {
  currentPath?: string;
}
const { currentPath = '' } = Astro.props;
const isActive = (path: string) => currentPath === path;
const logoHref = currentPath.startsWith('/admin') || currentPath === '/configuracion' ? '/admin' : '/cursos';
---
<header class="bg-[#123859] border-b border-white/10 sticky top-0 z-50">
  <div class="max-w-7xl mx-auto px-6 py-2.5">
    <div class="flex items-center justify-between">
      <a href={logoHref} class="flex items-center hover:opacity-90 transition-opacity">
        <img
          src="/logo.png"
          alt="LÃ³pez A Insura & Tax - Learning"
          class="h-11 w-auto max-w-[260px] object-contain"
        />
      </a>

      <nav class="flex items-center gap-8">
        {currentPath === '/configuracion' ? (
          <a href="/admin" class="text-base transition-colors text-white hover:text-white/90 font-medium flex items-center gap-2">
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"/></svg>
            Back to course list
          </a>
        ) : currentPath.startsWith('/admin') ? (
          <>
            <a href="/cursos" class="text-base transition-colors text-white hover:text-white/90">
              View as user
            </a>
            <a
              href="/admin/usuarios"
              class:list={[
                'text-base transition-colors',
                currentPath.startsWith('/admin/usuarios') ? 'text-[#FFF0CE] font-semibold' : 'text-white hover:text-white/90'
              ]}
            >
              Users
            </a>
            <a
              href="/configuracion"
              class:list={[
                'text-base transition-colors',
                currentPath === '/configuracion' ? 'text-[#FFF0CE] font-semibold' : 'text-white hover:text-white/90'
              ]}
            >
              Settings
            </a>
          </>
        ) : (
          <>
            <a href="/admin" id="admin-link" class="text-base transition-colors text-white hover:text-white/90 hidden">
              Admin panel
            </a>
            <a
              href="/cursos"
              class:list={[
                'text-base transition-colors',
                isActive('/cursos') ? 'text-[#FFF0CE] font-semibold' : 'text-white hover:text-white/90'
              ]}
            >
              My Courses
            </a>
            <a
              href="/cursos/diplomas"
              class:list={[
                'text-base transition-colors',
                isActive('/cursos/diplomas') ? 'text-[#FFF0CE] font-semibold' : 'text-white hover:text-white/90'
              ]}
            >
              Diplomas
            </a>
          </>
        )}
        <div class="flex items-center gap-4 ml-4 pl-6 border-l border-white/20">
          <a
            href="/perfil"
            class:list={[
              'flex items-center gap-2.5 text-base transition-colors',
              currentPath === '/perfil' ? 'text-[#FFF0CE] font-semibold' : 'text-white hover:text-white/90'
            ]}
          >
            <svg class="w-5 h-5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"/></svg>
            <span id="profile-greeting">My Profile</span>
          </a>
          <a href="/signout" class="flex items-center gap-2 text-white hover:opacity-90 transition-opacity p-1 rounded" title="Sign out">
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 16l4-4m0 0l-4-4m4 4H7m6 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h4a3 3 0 013 3v1"/></svg>
          </a>
        </div>
      </nav>
    </div>
  </div>
  <script>
    import { request, get } from '@/lib/api';
    import type { CurrentUser } from '@/lib/api-types';
    (async function () {
      const adminLink = document.getElementById('admin-link');
      if (adminLink) {
        try {
          await request('/admin/courses', { skipForbiddenRedirect: true });
          adminLink.classList.remove('hidden');
        } catch {
          adminLink.classList.add('hidden');
        }
      }
      const greetingEl = document.getElementById('profile-greeting');
      if (greetingEl) {
        const endpoints = ['/users/me', '/profile', '/users/current'];
        for (const path of endpoints) {
          try {
            const data = await get<unknown>(path);
            const wrapped = data && typeof data === 'object' && 'user' in data ? (data as { user: CurrentUser }).user : (data as CurrentUser);
            if (wrapped && (wrapped.id != null || wrapped.email)) {
              const name = wrapped.first_name?.trim() || wrapped.email?.trim() || 'Guest';
              greetingEl.textContent = `Hello! ${name}`;
              break;
            }
          } catch {
            continue;
          }
        }
      }
    })();
  </script>
</header>
